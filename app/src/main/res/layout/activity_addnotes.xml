<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Notes.ADDnotes">

    <ImageButton
        android:id="@+id/Back2NotesButton"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:backgroundTint="#090909"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/etnotesTitle"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:hint="ADD Subject Title"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    <EditText
        android:id="@+id/etnotesURL"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:hint="Enter google Drive URL"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/ADDnotesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnotesTitle"
        app:layout_constraintVertical_bias="0.003" />

    <EditText
        android:id="@+id/etdeletenoteTitle"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:layout_marginBottom="220dp"
        android:background="@color/colorPrimary"
        android:hint="DELETE Subject: Enter Subject Title"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ADDnotesButton"
        app:layout_constraintVertical_bias="0.777" />

    <Button
        android:id="@+id/ADDnotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:backgroundTint="#00FF0A"
        android:text="@string/add_notes"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/DLTnotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/red"
        android:text="Delete"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="269dp"
        android:layout_height="215dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>